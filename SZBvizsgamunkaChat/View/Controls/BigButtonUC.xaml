<UserControl x:Class="SZBvizsgamunkaChat.View.Controls.BigButtonUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SZBvizsgamunkaChat.View.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Name="bigButton" Cursor="Hand">
    <Border CornerRadius="10" Width="335" Height="50" Background="#96CBA4">
        <ContentControl Content="{Binding Text,ElementName=bigButton}" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White" FontFamily="Segoe UI" FontSize="15" FontWeight="SemiBold"/>
    </Border>
</UserControl>
