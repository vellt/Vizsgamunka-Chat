<UserControl x:Class="SZBvizsgamunkaChat.View.Controls.LogoUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SZBvizsgamunkaChat.View.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Name="logoCntr">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <ContentControl Content="{Binding LogoName,ElementName=logoCntr}" Foreground="Black" FontSize="35" FontWeight="SemiBold" FontFamily="Segoe UI" VerticalAlignment="Center" Grid.Column="0" Margin="10 0"/>
        <Grid Background="#707070" Width="2" Height="27" Grid.Column="1"/>
        <ContentControl Content="{Binding SubName,ElementName=logoCntr}" Foreground="#96CBA4" FontSize="25" FontWeight="SemiBold" FontFamily="Segoe UI" VerticalAlignment="Center" Grid.Column="2" Margin="10 0"/>
    </Grid>
</UserControl>
