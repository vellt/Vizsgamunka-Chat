<UserControl x:Class="SZBvizsgamunkaChat.View.Controls.SearchBarUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SZBvizsgamunkaChat.View.Controls"
             xmlns:icons="clr-namespace:SZBvizsgamunkaChat.View.Icons"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Rectangle Grid.Column="1" Fill="#FFF7F8FA"  Height="42" VerticalAlignment="Center" RadiusY="20.5" RadiusX="20.5"  />
        <ContentControl x:Name="keresoHatter" Grid.Column="1" FontFamily="Segoe UI" Foreground="#707070" VerticalAlignment="Center" FontSize="15" Margin="52 0" Content="Keresés.."/>
        <TextBox x:Name="keresoContent" PreviewMouseUp="Rectangle_MouseDown" Padding="-2 0" VerticalContentAlignment="Center" BorderThickness="0" Grid.Column="1" Margin="52 0" Height="42" FontSize="15" FontFamily="Segoe UI" Foreground="#707070" TextWrapping="NoWrap" Background="Transparent" TextChanged="keresoContent_TextChanged" />

        <Grid Height="18" Width="18" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="18 0" Background="#FFF7F8FA" Cursor="Hand">
            <icons:SearchUC Height="17.6" />
        </Grid>
    </Grid>
</UserControl>
